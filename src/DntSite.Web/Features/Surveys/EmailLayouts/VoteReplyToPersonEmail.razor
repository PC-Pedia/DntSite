@using DntSite.Web.Features.Surveys.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    نظر جدید ذیل برای نظرسنجی «
    <a href="@PostUrl">
        @Model.Title
    </a>» ارسال گردیده است:
    <br/>
    <br/>
    <div align="right" dir="rtl" style="font-family: Tahoma; ">
        <strong>نظر ارسالی شما:</strong>
        <br/>
        @Model.ReplyToComment.HtmlRaw()
        <br/>
        <br/>
        <strong>پاسخ دریافتی:</strong>
        <br/>
        <strong>نام فرستنده:</strong> @Model.Username
        <br/>
        <strong>نظر:</strong><br/>
        @Model.Body.HtmlRaw()
        <br/>
    </div>
</LayoutView>

@code {

    [Parameter] public VoteReplyToPersonEmailModel Model { set; get; } = null!;

    private string PostUrl => Model.SiteRootUri.CombineUrl(SurveysRoutingConstants.SurveysArchiveDetailsBase, escapeRelativeUrl: false).CombineUrl($"/{Model.VoteId}#comment-{Model.CommentId}", escapeRelativeUrl: false);

}
