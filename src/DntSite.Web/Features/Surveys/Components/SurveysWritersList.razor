@using DntSite.Web.Features.Posts.Components
@attribute [Route(SurveysRoutingConstants.SurveysWriters)]
@attribute [Route(SurveysRoutingConstants.SurveysWritersPageCurrentPage)]
@attribute [Route(SurveysRoutingConstants.SurveysWritersUserFriendlyName)]
@attribute [Route(SurveysRoutingConstants.SurveysWritersUserFriendlyNamePageCurrentPage)]

@if (HasUserFriendlyName)
{
    <ShowSurveysArchiveList Posts="_blogPosts"
                            CurrentPage="CurrentPage"
                            ItemsPerPage="PostItemsPerPage"
                            BasePath="@BasePath"
                            MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
