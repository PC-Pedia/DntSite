@using DntSite.Web.Features.Advertisements.Models
@attribute [Route(AdvertisementsRoutingConstants.WriteAdvertisementType)]
@attribute [Route(AdvertisementsRoutingConstants.WriteAdvertisementEdit)]
@attribute [Route(AdvertisementsRoutingConstants.WriteAdvertisementDelete)]

<DntSitePageTitle Group="آگهی‌ها" PageTitle="ارسال آگهی"/>

@switch (_advertisementType)
{
    case AdvertisementType.JobOffer:
        <AddJobOfferAdvertisementForm OnValidSubmit="PerformAsync"
                                      AutoCompleteDataList="AutoCompleteDataList"/>

        break;
    case AdvertisementType.NewProject:
        <AddNewProjectAdvertisementForm OnValidSubmit="PerformAsync"
                                        AutoCompleteDataList="AutoCompleteDataList"/>

        break;
    case AdvertisementType.Special:
    default:
        <AddAdvertisementForm InitialModel="_initialModel"
                              OnValidSubmit="PerformAsync"
                              AutoCompleteDataList="AutoCompleteDataList"/>

        break;
}
