@using DntSite.Web.Features.Posts.Components
@attribute [Route(AdvertisementsRoutingConstants.AdvertisementsTag)]
@attribute [Route(AdvertisementsRoutingConstants.AdvertisementsTagPage)]
@attribute [Route(AdvertisementsRoutingConstants.AdvertisementsTagName)]
@attribute [Route(AdvertisementsRoutingConstants.AdvertisementsTagNamePage)]

@if (HasTag)
{
    <ShowAdvertisementsArchiveList Posts="_posts"
                                   CurrentPage="CurrentPage"
                                   ItemsPerPage="PostItemsPerPage"
                                   BasePath="@BasePath"
                                   MainTitle="@MainTitle"/>
}
else
{
    <TagsList MainTitle="@MainTitle"
              CurrentPage="CurrentPage"
              ItemsPerPage="TagItemsPerPage"
              TotalItemCount="@_totalTagItemsCount"
              BasePath="@BasePath"
              ShowExportedFile="false"
              Tags="_tags"/>
}
