@using DntSite.Web.Features.Posts.Components
@attribute [Route(CoursesRoutingConstants.CoursesTag)]
@attribute [Route(CoursesRoutingConstants.CoursesTagPageCurrentPage)]
@attribute [Route(CoursesRoutingConstants.CoursesTagTagName)]
@attribute [Route(CoursesRoutingConstants.CoursesTagTagNamePageCurrentPage)]
@attribute [Route(CoursesRoutingConstants.CoursesTagOldTagName)]


@if (HasTag)
{
    <ShowCoursesArchiveList Posts="_posts"
                            CurrentPage="CurrentPage"
                            ItemsPerPage="PostItemsPerPage"
                            BasePath="@BasePath"
                            MainTitle="@MainTitle"/>
}
else
{
    <TagsList MainTitle="@MainTitle"
              CurrentPage="CurrentPage"
              ItemsPerPage="TagItemsPerPage"
              TotalItemCount="@_totalTagItemsCount"
              BasePath="@BasePath"
              ShowExportedFile="false"
              Tags="_tags"/>
}
