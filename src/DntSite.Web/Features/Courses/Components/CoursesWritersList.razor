@using DntSite.Web.Features.Posts.Components
@attribute [Route(CoursesRoutingConstants.CoursesWriters)]
@attribute [Route(CoursesRoutingConstants.CoursesWritersPageCurrentPage)]
@attribute [Route(CoursesRoutingConstants.CoursesWritersUserFriendlyName)]
@attribute [Route(CoursesRoutingConstants.CoursesWritersUserFriendlyNamePageCurrentPage)]

@if (HasUserFriendlyName)
{
    <ShowCoursesArchiveList Posts="_blogPosts"
                            CurrentPage="CurrentPage"
                            ItemsPerPage="PostItemsPerPage"
                            BasePath="@BasePath"
                            MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
