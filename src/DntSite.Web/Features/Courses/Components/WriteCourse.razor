@attribute [Route(CoursesRoutingConstants.WriteCourse)]
@attribute [Route(CoursesRoutingConstants.WriteCourseEditEditId)]
@attribute [Route(CoursesRoutingConstants.WriteCourseDeleteDeleteId)]


<DntSitePageTitle PageTitle="تعریف شناسنامه دوره"/>

<DntCardFrame>
    <FrameHeader>
        تعریف شناسنامه دوره
    </FrameHeader>
    <FrameBody>
        <EditForm Model="WriteCourseModel" method="post" OnValidSubmit="PerformAsync"
                  FormName="@nameof(WriteCourse)" Enhance>
            <DataAnnotationsValidator/>

            <DntInputText AutoCompleteType="AutoCompleteType.Off"
                          FieldIcon="@DntBootstrapIcons.BiNewspaper"
                          @bind-Value="WriteCourseModel.Title"/>

            <DntHtmlEditor @bind-Value="WriteCourseModel.Description"
                           LabelName="توضیحات"
                           ShowLabel="true"
                           IsReadOnly="false"
                           AllowUploadFile="true"
                           UploadFileApiPath="@ApiUrlsRoutingConstants.UploadFile.HttpPost.CourseFileUpload"
                           AcceptedUploadFileFormats=".zip,.rar,.7z"
                           MaximumUploadFileSizeInBytes="104857600"
                           AdditionalJsonDataDuringFileUpload=""
                           AllowUploadImageFile="true"
                           UploadImageFileApiPath="@ApiUrlsRoutingConstants.UploadFile.HttpPost.CourseImagesUpload"
                           AcceptedUploadImageFormats="image/png, image/jpeg"
                           MaximumUploadImageSizeInBytes="614400"
                           AdditionalJsonDataDuringImageFileUpload=""
                           AllowInsertImageUrl="true"
                           Height="200px"
                           Placeholder=""
                           Theme="snow"
                           Direction="rtl"/>

            <DntInputSelect @bind-Value="WriteCourseModel.TopicsList"
                            FieldIcon="@DntBootstrapIcons.BiAlignTop"
                            Items="CourseLevelItems"/>

            <DntHtmlEditor @bind-Value="WriteCourseModel.Requirements"
                           ShowLabel="true"
                           IsReadOnly="false"
                           AllowUploadFile="true"
                           UploadFileApiPath="@ApiUrlsRoutingConstants.UploadFile.HttpPost.CourseFileUpload"
                           AcceptedUploadFileFormats=".zip,.rar,.7z"
                           MaximumUploadFileSizeInBytes="104857600"
                           AdditionalJsonDataDuringFileUpload=""
                           AllowUploadImageFile="true"
                           UploadImageFileApiPath="@ApiUrlsRoutingConstants.UploadFile.HttpPost.CourseImagesUpload"
                           AcceptedUploadImageFormats="image/png, image/jpeg"
                           MaximumUploadImageSizeInBytes="614400"
                           AdditionalJsonDataDuringImageFileUpload=""
                           AllowInsertImageUrl="true"
                           Height="200px"
                           Placeholder=""
                           Theme="snow"
                           Direction="rtl"/>

            <DntInputCheckBox @bind-Value="WriteCourseModel.IsReadyToPublish"/>

            <DntInputTag
                FieldIcon="@DntBootstrapIcons.BiTag"
                FieldAddButtonIcon="@DntBootstrapIcons.BiPlusCircle"
                LabelName="برچسب‌ها"
                FieldAddButtonTitle="افزودن تگ به لیست"
                FieldRemoveButtonTitle="حذف تگ از لیست"
                AutoCompleteDataList="AutoCompleteDataList"
                @bind-InputTags="WriteCourseModel.Tags"/>

            <DntButton Type="ButtonType.Submit" IsSubmittingText="در حال ارسال ...">ارسال</DntButton>
        </EditForm>

        <WriteCourseHelp/>
    </FrameBody>
</DntCardFrame>
