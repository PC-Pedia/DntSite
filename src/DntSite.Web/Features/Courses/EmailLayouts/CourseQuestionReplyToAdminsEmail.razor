@using DntSite.Web.Features.Courses.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    نظر جدید ذیل برای بازخورد «
    <a href="@(Model.SiteRootUri)CourseQuestion/Details/@(Model.CourseId)/@(Model.PmId)#comment-@(Model.CommentId)">
        @Model.Title
    </a>» ارسال گردیده است:
    <br/>
    <br/>
    <div align="right" dir="rtl" style="font-family: Tahoma; ">
        <strong>نام فرستنده</strong>: @Model.Username
        <br/>
        <strong>نظر</strong>: @Model.Body.HtmlRaw(wrapInSpanWithDir: true)
        <br/>
        <strong>وضعیت</strong>: @Model.Stat
        <br/>
    </div>
    <br/>
    <br/>
    با احترام<br/>
    <a style="direction:ltr" href="@Model.SiteRootUri">@Model.EmailSig</a>
    <br/>
    <span lang="fa" dir="ltr">

        @Model.MsgDateTime
    </span>
    <br/>

</LayoutView>

@code {

    [Parameter] public CourseQuestionReplyToAdminsEmailModel Model { set; get; } = null!;

}
