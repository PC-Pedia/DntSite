@using DntSite.Web.Features.Courses.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    نظر جدید ذیل برای بازخورد «
    <a href="@(Model.SiteRootUri)CourseQuestion/Details/@(Model.CourseId)/@(Model.PmId)#comment-@(Model.CommentId)">
        @Model.Title
    </a>» ارسال گردیده است:
    <br/>
    <br/>
    <div align="right" dir="rtl" style="font-family: Tahoma; ">
        <strong>نظر ارسالی شما:</strong>
        <br/>
        @Model.ReplyToComment.HtmlRaw()
        <br/>
        <br/>
        <strong>پاسخ دریافتی:</strong>
        <br/>
        <strong>نام فرستنده:</strong> @Model.Username
        <br/>
        <strong>نظر:</strong><br/>
        @Model.Body.HtmlRaw()
        <br/>
    </div>
</LayoutView>

@code {

    [Parameter] public CourseQuestionReplyToPersonEmailModel Model { set; get; } = null!;

}
