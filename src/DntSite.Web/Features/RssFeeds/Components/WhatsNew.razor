@attribute [Route(RssFeedsRoutingConstants.Root)]
@attribute [Route(RssFeedsRoutingConstants.WhatsNew)]
@attribute [Route(RssFeedsRoutingConstants.WhatsNewPageCurrentPage)]
@attribute [Route(RssFeedsRoutingConstants.SiteLogs)]
@attribute [Route(RssFeedsRoutingConstants.SiteLogsPageCurrentPage)]

<DntSitePageTitle Group="جستجوها" PageTitle="@MainTitle" CurrentPage="@CurrentPage"/>

@if (FullTextSearchService.IsDatabaseIndexed)
{
    <WhatsNewItems
        Posts="_posts"
        ItemsPerPage="ItemsPerPage"
        CurrentPage="CurrentPage"
        BasePath="@RssFeedsRoutingConstants.WhatsNew"
        ShowPager="true"/>
}
else
{
    <DntCacheComponent
        TComponent="WhatsNewFeedRenderer"
        CacheKey="Whats-New-Renderer"
        ExpiresAfter="TimeSpan.FromMinutes(value: 5)"/>
}
