@using DntSite.Web.Features.Posts.Components
@attribute [Route(QuestionsRoutingConstants.QuestionsWriters)]
@attribute [Route(QuestionsRoutingConstants.QuestionsWritersPageCurrentPage)]
@attribute [Route(QuestionsRoutingConstants.QuestionsWritersUserFriendlyName)]
@attribute [Route(QuestionsRoutingConstants.QuestionsWritersUserFriendlyNamePageCurrentPage)]

@if (HasUserFriendlyName)
{
    <ShowQuestionsArchiveList Posts="_blogPosts"
                              CurrentPage="CurrentPage"
                              ItemsPerPage="PostItemsPerPage"
                              BasePath="@BasePath"
                              MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
