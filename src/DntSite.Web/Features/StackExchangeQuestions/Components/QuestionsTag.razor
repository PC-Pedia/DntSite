@using DntSite.Web.Features.Posts.Components
@attribute [Route(QuestionsRoutingConstants.QuestionsTag)]
@attribute [Route(QuestionsRoutingConstants.QuestionsTagPageCurrentPage)]
@attribute [Route(QuestionsRoutingConstants.QuestionsTagTagName)]
@attribute [Route(QuestionsRoutingConstants.QuestionsTagTagNamePageCurrentPage)]

@if (HasTag)
{
    <ShowQuestionsArchiveList Posts="_posts"
                              CurrentPage="CurrentPage"
                              ItemsPerPage="PostItemsPerPage"
                              BasePath="@BasePath"
                              MainTitle="@MainTitle"/>
}
else
{
    <TagsList MainTitle="@MainTitle"
              CurrentPage="CurrentPage"
              ItemsPerPage="TagItemsPerPage"
              TotalItemCount="@_totalTagItemsCount"
              BasePath="@BasePath"
              ShowExportedFile="false"
              Tags="_tags"/>
}
