@using DntSite.Web.Features.News.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    نظر جدید ذیل برای مطلب «
    <a href="@PostUrl">
        @Model.Title
    </a>» ارسال گردیده است:
    <br/>
    <br/>
    <div align="right" dir="rtl" style="font-family: Tahoma; ">
        <strong>نام فرستنده</strong>: @Model.Username
        <br/>
        <strong>نظر</strong>: @Model.Body.HtmlRaw()
        <br/>
        <strong>وضعیت</strong>: @Model.Stat
        <br/>
        <br/>
    </div>
</LayoutView>

@code {

    [Parameter] public PostNewsReplyToAdminsEmailModel Model { set; get; } = null!;

    private string PostUrl => Model.SiteRootUri.CombineUrl(NewsRoutingConstants.NewsDetailsBase, escapeRelativeUrl: false).CombineUrl($"/{Model.PmId}#comment-{Model.CommentId}", escapeRelativeUrl: false);

}
