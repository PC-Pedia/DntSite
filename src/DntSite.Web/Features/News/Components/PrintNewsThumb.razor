@if (FileExists)
{
    <div align="center" class="mt-3">
        <a href="@ImageUrl" rel="nofollow" target="_blank">
            <img id="newsItemImage-@DailyNewsItem.Id"
                 src="@(ApiUrlsRoutingConstants.File.HttpAny.NewsThumb)?name=@Uri.EscapeDataString(FileName)"
                 alt="@DailyNewsItem.Title"
                 title="@DailyNewsItem.Title"/>
        </a>
    </div>
}
