@using DntSite.Web.Features.Posts.Components
@attribute [Route(NewsRoutingConstants.NewsWriters)]
@attribute [Route(NewsRoutingConstants.NewsWritersPageCurrentPage)]
@attribute [Route(NewsRoutingConstants.NewsWritersUserFriendlyName)]
@attribute [Route(NewsRoutingConstants.NewsWritersUserFriendlyNamePageCurrentPage)]
@attribute [Route(NewsRoutingConstants.NewsWriterOld)]
@attribute [Route(NewsRoutingConstants.NewsWriterOldUserFriendlyName)]

@if (HasUserFriendlyName)
{
    <ShowNewsArchiveList Posts="_blogPosts"
                         CurrentPage="CurrentPage"
                         ItemsPerPage="PostItemsPerPage"
                         BasePath="@BasePath"
                         MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
