@using DntSite.Web.Features.UserProfiles.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    شخصی درخواست بازیابی کلمه عبور فراموش شده شما را داده است. اگر این درخواست
    متعلق به شما است لطفا بر روی لینک زیر کلیک نمائید:
    <br/>
    <div align="center" dir="rtl" style="font-family: Tahoma; ">
        <div align="center">
            <a href="@ForgottenPasswordUrl">
                بازیابی کلمه عبور فراموش شده
            </a>
        </div>
    </div>
</LayoutView>

@code {

    [Parameter] public ForgottenPasswordConfirmEmailModel Model { set; get; } = null!;

    private string ForgottenPasswordUrl => Model.SiteRootUri.CombineUrl(UserProfilesRoutingConstants.ForgottenPasswordResetBase, escapeRelativeUrl: false).CombineUrl(Model.QueryString, escapeRelativeUrl: true);

}
