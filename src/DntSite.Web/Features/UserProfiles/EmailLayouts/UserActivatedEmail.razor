@using DntSite.Web.Features.UserProfiles.Models
<LayoutView Layout="@typeof(EmailsLayout)">
    با سلام
    <br/>
    اکانت شما فعال گردید؛ لطفا در اسرع وقت به سایت لاگین نمائید تا در روز بعد به صورت خودکار غیرفعال نشوید.
    <br/>
    <br/>
    <div align="center" dir="rtl" style="font-family: Tahoma;">
        نام کاربری (جهت لاگین) : @Model.Username
        <br/>
        همچنین در هر زمان برای بازیابی کلمه‌ی عبور فراموش شده‌ی خود می‌توانید از آدرس ذیل استفاده
        نمائید:
        <br/>
        <div align="center">
            <a href="@ForgottenPasswordUrl">
                بازیابی
                کلمه عبور
            </a>
        </div>
    </div>
    <br/>
    با احترام<br/>
    <a style="direction:ltr" href="@Model.SiteRootUri">@Model.EmailSig</a>

    <br/>
    <span lang="fa" dir="ltr">

        @Model.MsgDateTime
    </span>
    <br/>

</LayoutView>

@code {

    [Parameter] public ActivatedAccountModel Model { set; get; } = null!;

    private string ForgottenPasswordUrl => Model.SiteRootUri.CombineUrl(UserProfilesRoutingConstants.ForgottenPassword, escapeRelativeUrl: false);

}
