                                         IsVisible="@(_model!.NumberOfTodayBirthdays > 0)"/>

        <DntLinkedOrderedListNavMenuItem Title="جویای کار"
                                         GlyphIcon="@DntBootstrapIcons.BiPersonWorkspace"
