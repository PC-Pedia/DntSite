                                         IsBadgeValueVisible="@(_model!.NumberOfProjects > 0)"/>

        <DntLinkedOrderedListNavMenuItem Title="نظرسنجی‌ها"
                                         GlyphIcon="@DntBootstrapIcons.BiCardChecklist"
