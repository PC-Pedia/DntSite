        <DntLinkedOrderedListNavMenuItem Title="کاربران"
                                         GlyphIcon="@DntBootstrapIcons.BiPeople"
                                         Url="@UserProfilesRoutingConstants.Users"
                                         BadgeValue="_model!.NumberOfUsers"
                                         IsBadgeValueVisible="@(_model!.NumberOfUsers > 0)"/>

        <DntLinkedOrderedListNavMenuItem Title="تولدهای امروز"
                                         GlyphIcon="@DntBootstrapIcons.BiCake2"
                                         Url="@UserProfilesRoutingConstants.UsersBirthdays"
