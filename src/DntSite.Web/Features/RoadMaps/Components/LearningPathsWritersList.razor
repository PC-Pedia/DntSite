@using DntSite.Web.Features.Posts.Components
@attribute [Route(RoadMapsRoutingConstants.LearningPathsWriters)]
@attribute [Route(RoadMapsRoutingConstants.LearningPathsWritersPageCurrentPage)]
@attribute [Route(RoadMapsRoutingConstants.LearningPathsWritersUserFriendlyName)]
@attribute [Route(RoadMapsRoutingConstants.LearningPathsWritersUserFriendlyNamePageCurrentPage)]

@if (HasUserFriendlyName)
{
    <ShowLearningPathsArchiveList Posts="_blogPosts"
                                  CurrentPage="CurrentPage"
                                  ItemsPerPage="PostItemsPerPage"
                                  BasePath="@BasePath"
                                  MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
