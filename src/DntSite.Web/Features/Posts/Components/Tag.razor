@using DntSite.Web.Features.RssFeeds.Models
@attribute [Route(PostsRoutingConstants.Tag)]
@attribute [Route(PostsRoutingConstants.TagPageCurrentPage)]
@attribute [Route(PostsRoutingConstants.TagTagName)]
@attribute [Route(PostsRoutingConstants.TagTagNamePageCurrentPage)]
@attribute [Route(PostsRoutingConstants.Search)]
@attribute [Route(PostsRoutingConstants.SearchLabelTagName)]

@if (HasTag)
{
    if (_tagId.HasValue)
    {
        <DntMessageBox Type="AlertType.Info" IsVisible="true" MarginBottom="4" MarginTop="2">
            <DntSite.Web.Features.Exports.Components.ShowExportedFile Id="_tagId.Value"
                                                                      Caption="@TagCaption"
                                                                      ButtonClass="btn-secondary"
                                                                      ItemType="WhatsNewItemType.Tag"/>
        </DntMessageBox>
    }

    <ShowBlogPostsList BlogPosts="_blogPosts"
                       CurrentPage="CurrentPage"
                       ItemsPerPage="PostItemsPerPage"
                       BasePath="@BasePath"
                       MainTitle="@MainTitle"/>
}
else
{
    <TagsList MainTitle="@MainTitle"
              CurrentPage="CurrentPage"
              ItemsPerPage="TagItemsPerPage"
              TotalItemCount="@_totalTagItemsCount"
              BasePath="@BasePath"
              ShowExportedFile="true"
              ItemType="WhatsNewItemType.Tag"
              Tags="_tags"/>
}
