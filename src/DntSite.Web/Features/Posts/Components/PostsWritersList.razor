@attribute [Route(PostsRoutingConstants.PostsWriters)]
@attribute [Route(PostsRoutingConstants.PostsWritersPageCurrentPage)]
@attribute [Route(PostsRoutingConstants.PostsWritersUserFriendlyName)]
@attribute [Route(PostsRoutingConstants.PostsWritersUserFriendlyNamePageCurrentPage)]

@if (HasUserFriendlyName)
{
    <ShowBlogPostsList BlogPosts="_blogPosts"
                       CurrentPage="CurrentPage"
                       ItemsPerPage="PostItemsPerPage"
                       BasePath="@BasePath"
                       MainTitle="@MainTitle"/>
}
else
{
    <WritersList MainTitle="@MainTitle"
                 CurrentPage="CurrentPage"
                 ItemsPerPage="PostItemsPerPage"
                 TotalItemCount="@_totalUsersCount"
                 BasePath="@BasePath"
                 Users="_users"/>
}
